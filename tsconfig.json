{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["./bittorrent"]
    }
  },
  "include": ["./bittorrent/"],
  "exclude": ["node_modules"]
}